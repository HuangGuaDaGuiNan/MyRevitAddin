                    <Button Content="开始" HorizontalAlignment="Left" Margin="379,404,0,0" VerticalAlignment="Top" Width="75"/>
                    <ListBox HorizontalAlignment="Left" Height="320" Margin="10,65,0,0" VerticalAlignment="Top" Width="536">
                        <CheckBox Content="CheckBox"/>
                        <CheckBox Content="CheckBox"/>
                        <CheckBox Content="CheckBox"/>
                        <CheckBox Content="CheckBox"/>
                        <CheckBox Content="CheckBox"/>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
